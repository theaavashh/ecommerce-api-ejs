<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body class="flex font-serif">
    <%- include('./dashboard.ejs'); %>
    <div class="form-container flex flex-col">
      <% if (locals.msg){%>
      <div
        class="bg-purple-100 border border-purple-400 text-black tex-2xl text-center px-4 mt-5 py-3 rounded relative"
        role="alert"
      >
        <strong class="font-semibold text-2xl font-serif"><%= msg %></strong>
      </div>
      <%}%>
      <form
        action="/api/v1/product"
        method="POST"
        class="mx-20"
        enctype="multipart/form-data"
      >
        <h1 class="font-semibold text-4xl my-16">ADD PRODUCT</h1>
        <div class="form-container flex justify-between w-[900px]">
          <div class="left-wrapper">
            <div class="mb-5">
              <label for="product" class="text-2xl font-normal py-10">
                Product Name
              </label>
              <input
                class="flex h-10 w-96 rounded-md border-2 border-black bg-transparent px-3 py-2 my-3 text-xl placeholder:text-gray-400"
                type="text"
                id="product"
                name="productName"
              />
            </div>
            <div class="mb-5">
              <label for="type" class="text-2xl font-normal py-10">
                Product Type
              </label>
              <input
                class="flex h-10 w-96 rounded-md border-2 border-black bg-transparent px-3 py-2 my-3 text-xl placeholder:text-gray-400"
                type="text"
                id="type"
                name="productType"
              />
            </div>
            <div class="mb-5">
              <label for="desc" class="text-2xl font-normal py-10">
                Product Description
              </label>
              <textarea
                rows="30"
                class="flex h-10 w-96 rounded-md border-2 border-black bg-transparent px-3 py-2 my-3 text-xl placeholder:text-gray-400"
                type="text"
                name="description"
              ></textarea>
            </div>
            <div class="mb-5">
              <label for="price" class="text-2xl font-normal py-10">
                Product Status
              </label>
              <input
                class="flex h-10 w-96 rounded-md border-2 border-black bg-transparent px-3 py-2 my-3 text-xl placeholder:text-gray-400"
                type="text"
                id="price"
                name="productStatus"
              />
            </div>
          </div>
          <div class="left-wrapper">
            <div class="mb-5">
              <label for="price" class="text-2xl font-normal py-10">
                Product Price
              </label>
              <input
                class="flex h-10 w-96 rounded-md border-2 border-black bg-transparent px-3 py-2 my-3 text-xl placeholder:text-gray-400"
                type="text"
                id="price"
                name="price"
              />
            </div>
            <div class="mb-5">
              <label for="quantity" class="text-2xl font-normal py-10">
                Quantity
              </label>
              <input
                class="flex h-10 w-96 rounded-md border-2 border-black bg-transparent px-3 py-2 my-3 text-xl placeholder:text-gray-400"
                type="text"
                id="quantity"
                name="quantity"
              />
            </div>
            <div class="mb-5">
              <label for="name" class="text-2xl font-normal py-10">
                Product Image
              </label>
              <input
                type="file"
                class="flex h-10 w-96 rounded-md border-2 border-black bg-transparent px-3 py-2 my-3 text-xl placeholder:text-gray-400"
                name="avatar"
              />
            </div>
            <div class="mb-5">
              <label for="price" class="text-2xl font-normal py-10">
                Store Of
              </label>
              <select name="storeOf">
                <% if (locals.data) {%> <% data.forEach((element)=>{%>
                <option value="<%=element.id%>"><%=element.storename %></option>

                <% }) %> <%}%>
              </select>
            </div>
          </div>
        </div>
        <button class="bg-black text-white px-5 py-3 m-10">Add Product</button>
      </form>
    </div>
  </body>
</html>
